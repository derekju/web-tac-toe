doctype html
html
    head
        title #{strings.page_title}
        script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js', type='text/javascript')
        script(src='/js/thirdparty/underscore-min.js', type='text/javascript')
        script(src='/js/thirdparty/backbone-min.js', type='text/javascript')        
        link(rel='stylesheet', href='/css/main.css', type='text/css')
        link(rel='stylesheet', href='//fonts.googleapis.com/css?family=Oswald:300,700', type='text/css')
    body        
        #application
            #title #{strings.title}
            #directions #{strings.directions}
            #container
                #board
                #results
                    #results-container
                        #results-text
                        a#next-game(href='javascript://') #{strings.next_game}
            #score
                #score-container
        script.
            strings = !{JSON.stringify(strings)};
        script(src='/js/main.js', type='text/javascript')